<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_model"
    android:layout_marginTop="@dimen/_12sdp"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_model_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/_6sdp"
        android:background="@drawable/rounded_bg"
        app:cardBackgroundColor="@color/white"
        android:layout_width="@dimen/_123sdp"
        android:layout_height="@dimen/_130sdp"
        >
<!--        android:layout_height="@dimen/_154sdp"-->

    <ImageView
        android:id="@+id/img_model"
        android:src="@drawable/img"
        android:layout_gravity="top"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_100sdp"
        android:importantForAccessibility="no" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bottom_rounded_transparent_bg"
            android:padding="@dimen/_6sdp"
            android:layout_gravity="end|bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/model_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/model_details"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_3sdp"
                android:textAlignment="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/model_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>