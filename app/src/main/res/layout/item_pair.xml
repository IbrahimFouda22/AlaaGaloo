<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/item_pair"
    android:layoutDirection="ltr"
    android:layout_marginTop="@dimen/_9sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/pair_card"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_115sdp">

        <ImageView
            android:id="@+id/pair_image"
            android:src="@drawable/img"
            android:scaleType="centerCrop"
            android:scaleY="1.1"
            android:scaleX="1.1"
            android:adjustViewBounds="true"
            android:clipToOutline="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            tools:targetApi="s" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pair_name_layout"
        app:layout_constraintStart_toStartOf="@id/pair_card"
        app:layout_constraintEnd_toEndOf="@id/pair_card"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_6sdp"
        android:background="@drawable/bottom_rounded_transparent_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pair_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>